{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"DOM",
			"esnext"
		],
		"module": "ESNext",
		"moduleResolution": "node",
		"moduleDetection": "auto",
		"declaration": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"jsx": "react-jsx",
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"preserveConstEnums": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true
	},
	"compileOnSave": true,
	"include": [
		"src",
//		"tests"
	],
	"exclude": [
		"dist",
		"lib",
		"node_modules"
	]
	
}
