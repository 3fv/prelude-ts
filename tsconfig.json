{
    "compilerOptions": {
        "alwaysStrict": false,
        "strict": false,
        "moduleResolution": "node",
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "./dist",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2019",
        "esModuleInterop": false,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "declaration": true,
        "sourceMap": true,
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "dom"
        ] 
    },
    "exclude": [
        "dist/**.*",
        "dist",
        "node_modules/**.*",
        "node_modules"
    ],
    "include": [
        "src",
        "tests",
        "src/**.*",
        "tests/**.*"
    ]
}